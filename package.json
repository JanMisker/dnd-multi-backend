{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/lib",
    "build:lib": "find packages -mindepth 1 -maxdepth 1 -type d -exec babel '{}'/src --out-dir '{}'/lib --ignore _spec.js ';'",
    "build:dist": "webpack --mode production",
    "build:examples": "webpack --mode production --config webpack/examples.js",
    "build": "npm run build:lib && npm run build:dist && npm run build:examples",
    "lint": "eslint .",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watch",
    "travis-test": "NODE_ENV=test NODE_PATH=$NODE_PATH:$PWD nyc --reporter=lcov mocha --opts ./.mocha.opts",
    "travis-coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "webpack-dev-server --mode development --config webpack/dev.js",
    "prepush": "npm run lint && npm run test && npm run build:dist && npm run build:examples",
    "prepare": "npm run clean && npm run lint && npm run build:lib",
    "postinstall": "lerna bootstrap"
  },
  "dependencies": {
    "react-dnd-html5-backend": "^4.0.4",
    "react-dnd-touch-backend": "^0.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.9.1",
    "jest": "^23.1.0",
    "jest-enzyme": "^6.0.1",
    "lerna": "^2.11.0",
    "react": "^16.4.0",
    "react-dom": "*",
    "react-test-renderer": "*",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.js",
    "collectCoverageFrom": [
      "packages/*/src/**/*.js"
    ]
  }
}

{
  "name": "dnd-multi-backend",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/lib",
    "build:lib": "find packages -mindepth 1 -maxdepth 1 -type d -exec babel '{}'/src --out-dir '{}'/lib --ignore _spec.js ';'",
    "build:dist": "webpack",
    "build:examples": "webpack --config webpack/examples.js",
    "build": "npm run build:lib && npm run build:dist && npm run build:examples",
    "lint": "eslint .",
    "test": "NODE_ENV=test NODE_PATH=$NODE_PATH:$PWD nyc mocha --opts ./.mocha.opts",
    "test:watch": "watch-run -i -p 'packages/*/src/**/*' npm run test",
    "travis-test": "NODE_ENV=test NODE_PATH=$NODE_PATH:$PWD nyc --reporter=lcov mocha --opts ./.mocha.opts",
    "travis-coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "webpack-dev-server --config webpack/dev.js",
    "prepush": "npm run lint && npm run test && npm run build:dist && npm run build:examples",
    "prepare": "npm run clean && npm run lint && npm run build:lib && npm run test",
    "postinstall": "lerna bootstrap"
  },
  "dependencies": {
    "react-dnd-html5-backend": "^3.0.2",
    "react-dnd-touch-backend": "^0.3.21"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.26.0",
    "cheerio": "=1.0.0-rc.1",
    "chai": "^4.1.1",
    "chai-enzyme": "^0.8.0",
    "coveralls": "^3.0.1",
    "enzyme": "^2.3.0",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.9.1",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^2.11.0",
    "mocha": "^5.2.0",
    "mocha-jsdom": "^2.0.0",
    "nyc": "^12.0.2",
    "react": "^15.3.0",
    "react-addons-test-utils": "*",
    "react-dom": "*",
    "react-test-renderer": "*",
    "sinon": "^5.1.1",
    "sinon-chai": "^3.1.0",
    "sinon-spy-utils": "^1.0.0",
    "watch-run": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  }
}

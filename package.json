{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/lib",
    "build:lib": "find packages -mindepth 1 -maxdepth 1 -type d -exec babel '{}'/src --out-dir '{}'/lib --ignore _spec.js ';'",
    "build:dist": "webpack --mode production",
    "build:examples": "webpack --mode production --config webpack/examples.js",
    "build": "npm run build:lib && npm run build:dist && npm run build:examples",
    "lint": "eslint .",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "travis:test": "CI=yes npm run test",
    "travis:coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "webpack-serve --config webpack/dev.js",
    "prepush": "npm run lint && npm run test && npm run build:dist && npm run build:examples",
    "prepare": "npm run clean && npm run lint && npm run build:lib && npm run test",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "acorn": "^6.0.4",
    "ajv": "^6.5.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "coveralls": "^3.0.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "lerna": "^3.4.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "webpack": "^4.25.1",
    "webpack-command": "^0.4.2",
    "webpack-merge": "^4.1.4",
    "webpack-serve": "^2.0.2"
  }
}

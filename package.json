{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/lib",
    "build:lib": "lerna exec --prefix -- babel --config-file ../../babel.config.js --ignore 'src/__tests__/' --out-dir lib --delete-dir-on-start src",
    "build:dist": "webpack --mode production",
    "build:examples": "webpack --mode production --config webpack/examples.js",
    "build": "npm run build:lib && npm run build:dist && npm run build:examples",
    "lint": "eslint .",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "travis:test": "CI=yes npm run test",
    "travis:coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "webpack-serve --config webpack/dev.js",
    "prepush": "npm run lint && npm run test && npm run build:dist && npm run build:examples",
    "prepare": "npm run clean && npm run lint && npm run build:lib && npm run test",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "acorn": "^6.2.1",
    "ajv": "^6.10.2",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "coveralls": "^3.0.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.8.0",
    "jest-enzyme": "^7.0.2",
    "lerna": "^2.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "webpack": "^4.37.0",
    "webpack-command": "^0.4.2",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  }
}
